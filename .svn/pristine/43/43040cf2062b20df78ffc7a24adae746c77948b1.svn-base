<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" xmlns:shiro="http://www.pollix.at/thymeleaf/shiro">
<head>
    <th:block th:include="include :: header('考试管理列表')" />
</head>
<body class="gray-bg">
     <div class="container-div">
        <div class="row">
            <div class="col-sm-12 search-collapse">
                <form id="formId">
                    <div class="select-list">
                        <ul>
                            <li>
                                <label>考试标题：</label>
                                <input type="text" name="examTitle"  placeholder="精准搜索"/>
                            </li>
                            <li>
                                <label>等级：</label>
                                <select name="levelId" >
                                    <option value="">所有</option>
                                </select>
                            </li>
                            <li>
                                <label>考试模式：</label>
                                <select name="examMode" th:with="type=${@dict.getType('sys_exam_mode')}">
                                    <option value="">所有</option>
                                    <option th:each="dict : ${type}" th:text="${dict.dictLabel}" th:value="${dict.dictValue}"></option>
                                </select>
                            </li>
                            <li>
                                <label>科目：</label>
                                <select name="subjectId" >
                                    <option value="">所有</option>
                                </select>
                            </li>
                            <li class="select-time2">
                                <label>考试时间：</label>
                                <input type="text" class="time-input" id="startTime" placeholder="开始时间" name="params[beginBeginTime]"/>
                                <span>-</span>
                                <input type="text" class="time-input" id="endTime" placeholder="结束时间" name="params[endBeginTime]"/>
                            </li>
                            <li class="select-time2">
                                <label>报名时间：</label>
                                <input type="text" class="time-input" id="startTime" placeholder="开始时间" name="params[beginRignBeginTime]"/>
                                <span>-</span>
                                <input type="text" class="time-input" id="endTime" placeholder="结束时间" name="params[endRignBeginTime]"/>
                            </li>
                            <li>
                                <label>考试状态：</label>
                                <select name="state" th:with="type=${@dict.getType('sys_exam_state')}">
                                    <option value="">所有</option>
                                    <option th:each="dict : ${type}" th:text="${dict.dictLabel}" th:value="${dict.dictValue}"></option>
                                </select>
                            </li>
                            <li class="select-time2">
                                <label>创建时间：</label>
                                <input type="text" class="time-input" id="startTime" placeholder="开始时间" name="params[beginCtime]"/>
                                <span>-</span>
                                <input type="text" class="time-input" id="endTime" placeholder="结束时间" name="params[endCtime]"/>
                            </li>
                            <li>
                                <label>创建人：</label>
                                <input type="text" name="creator"/>
                            </li>
                            <li>
                                <label>是否删除：</label>
                                <select name="isDelete" th:with="type=${@dict.getType('sys_is_delete')}">
                                    <option value="">所有</option>
                                    <option th:each="dict : ${type}" th:text="${dict.dictLabel}" th:value="${dict.dictValue}"></option>
                                </select>
                            </li>
                            <li>
                                <a class="btn btn-primary btn-rounded btn-sm" onclick="$.table.search()"><i class="fa fa-search"></i>&nbsp;搜索</a>
                                <a class="btn btn-warning btn-rounded btn-sm" onclick="$.form.reset()"><i class="fa fa-refresh"></i>&nbsp;重置</a>
                            </li>
                        </ul>
                    </div>
                </form>
            </div>

            <div class="btn-group-sm" id="toolbar" role="group">
                <a class="btn btn-success" onclick="$.operate.add()" shiro:hasPermission="system:exam:add">
                    <i class="fa fa-plus"></i> 添加
                </a>
                <a class="btn btn-warning" onclick="$.table.exportExcel()" shiro:hasPermission="system:exam:export">
                    <i class="fa fa-download"></i> 导出
                </a>
            </div>
            <div class="col-sm-12 select-table table-striped">
                <table id="bootstrap-table"></table>
            </div>
        </div>
    </div>
    <th:block th:include="include :: footer" />
    <script th:inline="javascript">
        var editFlag = [[${@permission.hasPermi('system:exam:edit')}]];
        var removeFlag = [[${@permission.hasPermi('system:exam:remove')}]];
        var examModeDatas = [[${@dict.getType('sys_exam_mode')}]];
        var stateDatas = [[${@dict.getType('sys_exam_state')}]];
        var isDeleteDatas = [[${@dict.getType('sys_is_delete')}]];
        var prefix = ctx + "system/exam";

        $(function() {

        	initLevelList("levelId","");
        	initSubjectList("subjectId","");
            var options = {
                url: prefix + "/list",
                createUrl: prefix + "/add",
                updateUrl: prefix + "/edit/{id}",
                removeUrl: prefix + "/remove",
                exportUrl: prefix + "/export",
                modalName: "考试管理",
                columns: [{
                    radio: true
                },
                {
                    field: 'examId', 
                    title: '考试编号',
                    visible: false
                },
                {
                    field: 'examTitle', 
                    title: '考试标题'
                },
                {
                    field: 'params.paperName', 
                    title: '试卷'
                },
                {
                    field: 'params.levelName', 
                    title: '等级'
                },
                {
                    field: 'params.subjectName', 
                    title: '科目'
                },
                {
                    field: 'examMode', 
                    title: '考试模式',
                    formatter: function(value, row, index) {
                       return $.table.selectDictLabel(examModeDatas, value);
                    }
                },
                {
                    field: 'price', 
                    title: '考试费用(元)'
                },
                {
                    field: 'beginTime', 
                    title: '考试开始时间'
                },
                {
                    field: 'argueEndTime', 
                    title: '考试结束时间'
                },
                {
                    field: 'rignBeginTime', 
                    title: '报名开始时间'
                },
                {
                    field: 'rignEndTime', 
                    title: '报名结束时间'
                },
                {
                    field: 'state', 
                    title: '考试状态',
                    formatter: function(value, row, index) {
                       return $.table.selectDictLabel(stateDatas, value);
                    }
                },
                {
                    field: 'ctime', 
                    title: '创建时间'
                },
                {
                    field: 'creator', 
                    title: '创建人'
                },
                {
                    field: 'isDelete', 
                    title: '是否删除',
                    formatter: function(value, row, index) {
                       return $.table.selectDictLabel(isDeleteDatas, value);
                    }
                },
                {
                    title: '操作',
                    align: 'center',
                    formatter: function(value, row, index) {
                        var actions = [];
                        actions.push('<a class="btn btn-primary btn-xs" href="javascript:void(0)"  lang="'+row.params.paperDoc+'" onclick="showAllHtml(this)" ><i class="fa fa-search"></i>预览</a> ');
                        if(row.state == 0){
                        	actions.push('<a class="btn btn-success btn-xs ' + editFlag + '" href="javascript:void(0)" onclick="$.operate.edit(\'' + row.examId + '\')"><i class="fa fa-edit"></i>编辑</a> ');
                        }
                        return actions.join('');
                    }
                }]
            };
            $.table.init(options);
        });
    </script>
</body>
</html>