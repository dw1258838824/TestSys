<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" >
<head>
    <th:block th:include="include :: header('修改试卷管理')" />
</head>
<body class="white-bg">
    <div class="wrapper wrapper-content animated fadeInRight ibox-content">
        <form class="form-horizontal m" id="form-paper-edit" th:object="${tPaper}">
            <input name="paperId" th:field="*{paperId}" type="hidden">
            <div class="form-group">    
                <label class="col-sm-3 control-label is-required">试卷名称：</label>
                <div class="col-sm-8">
                    <input name="paperName" th:field="*{paperName}" class="form-control" type="text" required>
                </div>
            </div>
            <div class="form-group">    
                <label class="col-sm-3 control-label">试卷类型：</label>
                <div class="col-sm-8">
                    <select name="paperType" class="form-control m-b" th:with="type=${@dict.getType('sys_paper_type')}" required  disabled>
                        <option th:each="dict : ${type}" th:text="${dict.dictLabel}" th:value="${dict.dictValue}" th:field="*{paperType}"></option>
                    </select>
                </div>
            </div>
            <div class="form-group">    
                <label class="col-sm-3 control-label">等级：</label>
                <div class="col-sm-8">
                    <select name="level" class="form-control m-b"  disabled>
                    </select>
                    <input type="hidden" id="levelVal" th:value="*{level}" />
                    
                </div>
            </div>
            <div class="form-group">    
                <label class="col-sm-3 control-label">科目：</label>
                <div class="col-sm-8">
                    <select name="subjectId" class="form-control m-b" required disabled>
                    </select>
                    <input type="hidden" id="subjectIdVal" th:value="*{subjectId}" />
                </div>
            </div>
            <div class="form-group">    
                <label class="col-sm-3 control-label is-required">总分：</label>
                <div class="col-sm-8">
                    <input name="allScore" th:field="*{allScore}" class="form-control" type="text" required readonly>
                </div>
            </div>
            <div class="form-group">    
                <label class="col-sm-3 control-label is-required">及格分数：</label>
                <div class="col-sm-8">
                    <input name="passScore" th:field="*{passScore}" class="form-control" type="text" required>
                </div>
            </div>
            
            <div class="form-group">    
                <label class="col-sm-3 control-label is-required">判卷模式：</label>
                <div class="col-sm-8">
                    <select name="judgeMode" class="form-control m-b" th:with="type=${@dict.getType('sys_judge_mode')}" required  >
                        <option th:each="dict : ${type}" th:text="${dict.dictLabel}" th:value="${dict.dictValue}" th:field="*{judgeMode}"></option>
                    </select>
                </div>
            </div>
        </form>
    </div>
    <th:block th:include="include :: footer" />
    <script type="text/javascript">
        var prefix = ctx + "system/paper";
        $("#form-paper-edit").validate({
            focusCleanup: true
        });

        function submitHandler() {
            if ($.validate.form()) {
                $.operate.save(prefix + "/edit", $('#form-paper-edit').serialize());
            }
        }
    	initLevelList("level",$("#levelVal").val());
    	initSubjectList("subjectId",$("#subjectIdVal").val());
    </script>
</body>
</html>