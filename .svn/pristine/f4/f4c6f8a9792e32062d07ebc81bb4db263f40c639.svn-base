 <script th:inline="javascript">
    	var notices = [[${notices}]];
    	$(function(){
    		
    		var head = '<h4>最新公告 &nbsp;  &nbsp;  &nbsp; ';
    		var tent = '';
    		//$("#signupForm").css("height",$("#signupForm"));
    		if(notices.length > 0){
    			var n = 0;
    			for(var i=0; i<notices.length ;i++){
    				if(notices[i].noticeType=='2'){
    					head += '<a href="javascript:showPanel('+n+')"><i class="fa fa-circle" aria-hidden="true"></i> &nbsp </a>';
    					n ++;
    					var disp = "none";
    					if(i==0){
    						disp = "block";
    					}
    					tent += '<div class="panel panel-default " style="display: '+disp+'"> '+
			                 '      <div class="panel-body"><H3> '+notices[i].noticeTitle+'</H3>'+
			                 '		<p class="panel-p">'+notices[i].noticeContent+'</p>'+
			                 '		<p style="float:right">'+notices[i].createTime+'</p>'+
			                 '      </div>'+
	                   		 '</div>';
    				}
    			}
    			head += '</h4>';
	    		$("#notice").html(head + tent);
    		}
        	
    	})
    	function checkInfo(ele){
    		if($(ele).next().is(":hidden")){
    			$(ele).next().show(300);
    		}else{
    			$(ele).next().hide(300);
    		}
    		
    	}
		var i = 1;
    	function changeBg(){
    		if(i==1){
    			$(".signin").css("background-image","url('img/2.jpg')");
    			i = 2;
    		}else if (i==2){
    			$(".signin").css("background-image","url('img/3.jpg')");
    			i = 3;
    		}else{
    			$(".signin").css("background-image","url('img/1.jpg')");
    			i = 1;
    		}
		}
    	function changeNotice(){
    		var a = $(".panel-default").length;
    		for(var s=0;s<a;s++){
    			if(!$($(".panel-default")[s]).is(":hidden")){
    				var hideIndex = s;
        			var showIndex = s + 1;
        			if(s == (a-1)){
        				showIndex = 0;
        				s = -1;
        			}
    				$($(".panel-default")[hideIndex]).hide();
        			$($(".panel-default")[showIndex]).fadeIn(1200);
    				return;
    			}
    		}
    	}
    	var times = setInterval(function(){
    		changeBg();
    	},5000);
    	var times2 = setInterval(function(){
    		changeNotice();
    	},7000);
    	function showPanel(idx){
    		clearInterval(times2);
    		$(".panel-default").hide();
    		$($(".panel-default")[idx]).fadeIn(1200);
    		times2 = setInterval(function(){
    			changeNotice();
        	},7000);
    	}
    	function company(){
    		$("#sign,#cooperate,#callMe").hide();
    		$("#company").show();
    	}
    	function cooperate(){
    		$("#sign,#company,#callMe").hide();
    		$("#cooperate").show();
    	}
    	function callMe(){
    		$("#sign,#cooperate,#company").hide();
    		$("#callMe").show();
    	}
    </script>
