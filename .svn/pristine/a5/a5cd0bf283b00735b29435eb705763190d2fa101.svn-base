<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" xmlns:shiro="http://www.pollix.at/thymeleaf/shiro">
<head>
    <th:block th:include="include :: header('商务洽谈列表')" />
</head>
<body class="gray-bg">
     <div class="container-div">
        <div class="row">
            <div class="col-sm-12 search-collapse">
                <form id="formId">
                    <div class="select-list">
                        <ul>
                            <li>
                                <label>发起人：</label>
                                <input type="text" name="startUserName"/>
                            </li>
                           <!--  <li>
                                <label>状态：</label>
                                <select name="state" th:with="type=${@dict.getType('sys_message_state')}">
                                    <option value="">所有</option>
                                    <option th:each="dict : ${type}" th:text="${dict.dictLabel}" th:value="${dict.dictValue}"></option>
                                </select>
                            </li> -->
                            <li>
                                <a class="btn btn-primary btn-rounded btn-sm" onclick="$.table.search()"><i class="fa fa-search"></i>&nbsp;搜索</a>
                                <a class="btn btn-warning btn-rounded btn-sm" onclick="$.form.reset()"><i class="fa fa-refresh"></i>&nbsp;重置</a>
                            </li>
                        </ul>
                    </div>
                </form>
            </div>

            <div class="btn-group-sm" id="toolbar" role="group">
                <a class="btn btn-success hide" onclick="$.operate.add()" shiro:hasPermission="system:business:add">
                    <i class="fa fa-plus"></i> 添加
                </a>
                <a class="btn btn-primary single disabled hide" onclick="$.operate.edit()" shiro:hasPermission="system:business:edit">
                    <i class="fa fa-edit"></i> 修改
                </a>
                <a class="btn btn-danger multiple disabled" onclick="$.operate.removeAll()" shiro:hasPermission="system:business:remove">
                    <i class="fa fa-remove"></i> 删除
                </a>
                <a class="btn btn-warning" onclick="$.table.exportExcel()" shiro:hasPermission="system:business:export">
                    <i class="fa fa-download"></i> 导出
                </a>
            </div>
            <div class="col-sm-12 select-table table-striped">
                <table id="bootstrap-table"></table>
            </div>
        </div>
    </div>
    <th:block th:include="include :: footer" />
    <script th:inline="javascript">
        var editFlag = [[${@permission.hasPermi('system:business:edit')}]];
        var removeFlag = [[${@permission.hasPermi('system:business:remove')}]];
        var stateDatas = [[${@dict.getType('sys_message_state')}]];
        var prefix = ctx + "system/business";

        $(function() {
            var options = {
                url: prefix + "/list",
                createUrl: prefix + "/add",
                updateUrl: prefix + "/edit/{id}",
                removeUrl: prefix + "/remove",
                exportUrl: prefix + "/export",
                modalName: "商务洽谈",
                columns: [{
                    checkbox: true
                },
                {
                    field: 'businessId', 
                    title: '商务洽谈记录',
                    visible: false
                },
                {
                    field: 'startUserId', 
                    title: '发起人',
                    visible: false
                },
                {
                    field: 'startUserName', 
                    title: '发起人姓名'
                },
                {
                    field: 'bsContext', 
                    title: '洽谈内容'
                },
                {
                    field: 'bsTel', 
                    title: '联系方式'
                },
                {
                    field: 'acceptUserIds', 
                    title: '接收人编号集合',
                    visible: false
                },
                {
                    field: 'acceptRoleIds', 
                    title: '接收角色编号集合',
                    visible: false
                },
                {
                    field: 'state', 
                    title: '状态',
                    formatter: function(value, row, index) {
                       return $.table.selectDictLabel(stateDatas, value);
                    },
                    visible: false
                },
                {
                    field: 'ctime', 
                    title: '创建时间'
                },
                {
                    title: '操作',
                    align: 'center',
                    formatter: function(value, row, index) {
                        var actions = [];
                        //actions.push('<a class="btn btn-success btn-xs ' + editFlag + '" href="javascript:void(0)" onclick="$.operate.edit(\'' + row.businessId + '\')"><i class="fa fa-edit"></i>编辑</a> ');
                        //if(row.state==0){
                        //	actions.push('<a class="btn btn-success btn-xs ' + editFlag + '" href="javascript:void(0)" onclick="changeState(\'' + row.businessId + '\')"><i class="fa fa-edit"></i>标记为已读</a> ');
                        //}
                        actions.push('<a class="btn btn-danger btn-xs ' + removeFlag + '" href="javascript:void(0)" onclick="$.operate.remove(\'' + row.businessId + '\')"><i class="fa fa-remove"></i>删除</a>');
                        return actions.join('');
                    }
                }]
            };
            $.table.init(options);
        });
    </script>
</body>
</html>