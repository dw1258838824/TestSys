<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" xmlns:shiro="http://www.pollix.at/thymeleaf/shiro">
<head>
    <th:block th:include="include :: header('题库列表')" />
</head>
<body class="gray-bg">
     <div class="container-div">
        <div class="row">
            <div class="col-sm-12 search-collapse">
                <form id="formId">
                    <div class="select-list">
                        <ul>
                            <li>
                                <label>题目标题：</label>
                                <input type="text" name="questionTitle"/>
                            </li>
                            <li>
                                <label>题目类型：</label>
                                <select name="questionTypeId" >
                                    <option value="">所有</option>
                                </select>
                            </li>
                            <li>
                                <label>等级：</label>
                                <select name="levelId" th:with="type=${@dict.getType('')}">
                                    <option value="">所有</option>
                                    <option th:each="dict : ${type}" th:text="${dict.dictLabel}" th:value="${dict.dictValue}"></option>
                                </select>
                            </li>
                            <li>
                                <label>科目：</label>
                                <select name="subjectId" th:with="type=${@dict.getType('')}">
                                    <option value="">所有</option>
                                    <option th:each="dict : ${type}" th:text="${dict.dictLabel}" th:value="${dict.dictValue}"></option>
                                </select>
                            </li>
                            <li>
                                <label>知识点：</label>
                                <input id="treeId" name="questionPointId" type="hidden"  th:with="type=${@dict.getType('')}" />
	                			<input class="form-control" type="text" onclick="selectPointTree()" id="treeName" readonly="true" >
                            </li>
                            <li class="select-time">
                                <label>创建时间：</label>
                                <input type="text" class="time-input" id="startTime" placeholder="开始时间" name="params[beginCtime]"/>
                                <span>-</span>
                                <input type="text" class="time-input" id="endTime" placeholder="结束时间" name="params[endCtime]"/>
                            </li>
                            <li>
                                <label>创建者：</label>
                                <input type="text" name="creator"/>
                            </li>
                            <li>
                                <label>是否删除：</label>
                                <select name="isDelete" th:with="type=${@dict.getType('sys_yes_no')}">
                                    <option value="">所有</option>
                                    <option th:each="dict : ${type}" th:text="${dict.dictLabel}" th:value="${dict.dictValue}"></option>
                                </select>
                            </li>
                            <li>
                                <a class="btn btn-primary btn-rounded btn-sm" onclick="$.table.search()"><i class="fa fa-search"></i>&nbsp;搜索</a>
                                <a class="btn btn-warning btn-rounded btn-sm" onclick="$.form.reset()"><i class="fa fa-refresh"></i>&nbsp;重置</a>
                            </li>
                        </ul>
                    </div>
                </form>
            </div>

            <div class="btn-group-sm" id="toolbar" role="group">
                <a class="btn btn-success" onclick="$.operate.add()" shiro:hasPermission="system:question:add">
                    <i class="fa fa-plus"></i> 添加
                </a>
                <a class="btn btn-primary single disabled" onclick="$.operate.edit()" shiro:hasPermission="system:question:edit">
                    <i class="fa fa-edit"></i> 修改
                </a>
                <a class="btn btn-danger multiple disabled" onclick="$.operate.removeAll()" shiro:hasPermission="system:question:remove">
                    <i class="fa fa-remove"></i> 删除
                </a>
                <a class="btn btn-warning" onclick="$.table.exportExcel()" shiro:hasPermission="system:question:export">
                    <i class="fa fa-download"></i> 导出
                </a>
            </div>
            <div class="col-sm-12 select-table table-striped">
                <table id="bootstrap-table"></table>
            </div>
        </div>
    </div>
    <th:block th:include="include :: footer" />
    <script th:inline="javascript">
        var editFlag = [[${@permission.hasPermi('system:question:edit')}]];
        var removeFlag = [[${@permission.hasPermi('system:question:remove')}]];
        var isDeleteDatas = [[${@dict.getType('sys_yes_no')}]];
        var prefix = ctx + "system/question";

        $(function() {
        	initTypeList("questionTypeId");
        	initLevelList("levelId");
        	initSubjectList("subjectId");
            var options = {
                url: prefix + "/list",
                createUrl: prefix + "/add",
                updateUrl: prefix + "/edit/{id}",
                removeUrl: prefix + "/remove",
                exportUrl: prefix + "/export",
                modalName: "题库",
                columns: [{
                    checkbox: true
                },
                {
                    field: 'questionId', 
                    title: '题目编号',
                    visible: false
                },
                {
                    field: 'questionTitle', 
                    title: '题目标题'
                },
                {
                    field: 'questionTypeId', 
                    title: '题目类型'
                },
                {
                    field: 'levelId', 
                    title: '等级'
                },
                {
                    field: 'subjectId', 
                    title: '科目'
                },
                {
                    field: 'questionPointId', 
                    title: '知识点'
                },
                {
                    field: 'ctime', 
                    title: '创建时间'
                },
                {
                    field: 'creator', 
                    title: '创建者'
                },
                {
                    field: 'utime', 
                    title: '更新时间'
                },
                {
                    field: 'uperson', 
                    title: '更新人'
                },
                {
                    field: 'isDelete', 
                    title: '是否删除',
                    formatter: function(value, row, index) {
                       return $.table.selectDictLabel(isDeleteDatas, value);
                    }
                },
                {
                    title: '操作',
                    align: 'center',
                    formatter: function(value, row, index) {
                        var actions = [];
                        actions.push('<a class="btn btn-success btn-xs ' + editFlag + '" href="javascript:void(0)" onclick="$.operate.edit(\'' + row.questionId + '\')"><i class="fa fa-edit"></i>编辑</a> ');
                        actions.push('<a class="btn btn-danger btn-xs ' + removeFlag + '" href="javascript:void(0)" onclick="$.operate.remove(\'' + row.questionId + '\')"><i class="fa fa-remove"></i>删除</a>');
                        return actions.join('');
                    }
                }]
            };
            $.table.init(options);
        });
    </script>
</body>
</html>