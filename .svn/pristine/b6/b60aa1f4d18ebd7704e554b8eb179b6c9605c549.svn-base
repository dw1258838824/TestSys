<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" xmlns:shiro="http://www.pollix.at/thymeleaf/shiro">
<head>
    <th:block th:include="include :: header('学员列表')" />
</head>
<body class="gray-bg">
     <div class="container-div">
        <div class="row">
            <div class="col-sm-12 search-collapse">
                <form id="formId">
                    <div class="select-list">
                        <ul>
                            <li>
                                <label>学员名称：</label>
                                <input type="text" name="studentName"/>
                            </li>
                            <li>
                                <label>性别：</label>
                                <select name="sex" th:with="type=${@dict.getType('sys_user_sex')}">
                                    <option value="">所有</option>
                                    <option th:each="dict : ${type}" th:text="${dict.dictLabel}" th:value="${dict.dictValue}"></option>
                                </select>
                            </li>
                            <li>
                                <label>手机号：</label>
                                <input type="text" name="mobile"/>
                            </li>
                            <li>
                                <label>身份证：</label>
                                <input type="text" name="idcard"/>
                            </li>
                            <li id="deptLi">
                                <label>机构：</label>
                                <div class="input-group" style="width: 200px" onclick="selectDeptTree()">
                                    <input id="treeId" name="deptId" type="text" style="display:none" value="" />
                                    <input class="form-control" type="text" id="treeName" readonly="true">
                                    <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                </div>
                            </li>
                            <li>
                                <a class="btn btn-primary btn-rounded btn-sm" onclick="$.table.search()"><i class="fa fa-search"></i>&nbsp;搜索</a>
                                <a class="btn btn-warning btn-rounded btn-sm" onclick="$.form.reset()"><i class="fa fa-refresh"></i>&nbsp;重置</a>
                            </li>
                        </ul>
                    </div>
                </form>
            </div>

            <div class="btn-group-sm" id="toolbar" role="group">
            	<a class="btn btn-success" onclick="$.operate.addTab()" shiro:hasPermission="system:user:add">
	                <i class="fa fa-plus"></i> 新增
	            </a>
                <a class="btn btn-primary single disabled" onclick="$.operate.edit()" shiro:hasPermission="system:student:edit">
                    <i class="fa fa-edit"></i> 修改
                </a>
                <a class="btn btn-danger multiple disabled" onclick="$.operate.removeAll()" shiro:hasPermission="system:student:remove">
                    <i class="fa fa-remove"></i> 删除
                </a>
                <a class="btn btn-danger multiple disabled" onclick="removeFace()" shiro:hasPermission="system:student:remove">
                    <i class="fa fa-remove"></i> 清除人脸
                </a>
                <a class="btn btn-warning" onclick="$.table.exportExcel()" shiro:hasPermission="system:student:export">
                    <i class="fa fa-download"></i> 导出
                </a>
            </div>
            <div class="col-sm-12 select-table table-striped">
                <table id="bootstrap-table"></table>
            </div>
        </div>
    </div>
    <th:block th:include="include :: footer" />
    <script th:inline="javascript">
        var editFlag = [[${@permission.hasPermi('system:student:edit')}]];
        var removeFlag = [[${@permission.hasPermi('system:student:remove')}]];
        var sexDatas = [[${@dict.getType('sys_user_sex')}]];
        var prefix = ctx + "system/student";
		var prefixUser = ctx + "system/user";
        var myDept = [[${myDept}]];
        var levels = [[${levels}]];
        
        $(function() {
        	if(myDept != null){
        		$("#deptLi").hide();
        		$("#treeId").val(myDept);
        	}
            var options = {
                url: prefix + "/list",
                createUrl: prefixUser + "/add?flag=1",
                updateUrl: prefix + "/edit/{id}",
                removeUrl: prefix + "/remove",
                removeFaceUrl: prefix + "/removeFace",
                exportUrl: prefix + "/export",
                modalName: "学员",
                columns: [{
                    checkbox: true
                },
                {
                    field: 'studentId', 
                    title: '学员编号',
                    visible: false
                },
                {
                    field: 'studentName', 
                    title: '学员名称'
                },
                {
                    field: 'parentName', 
                    title: '监护人'
                },
                {
                    field: 'mobile', 
                    title: '监护人手机号'
                },
                {
                    field: 'params.deptName', 
                    title: '机构'
                },
                {
                    field: 'levelId', 
                    title: '等级',
                    formatter: function(value, row, index) {
                        var actions = [];
                        actions.push('<a class="btn btn-info btn-xs" href="javascript:void(0)" onclick="showLevel('+row.studentId+')"><i class="fa fa-level-up"></i>各科等级</a> ');
                        return actions.join('');
                    }
                },
                {
                    field: 'birthday', 
                    title: '学员生日'
                },
                {
                    field: 'sex', 
                    title: '性别',
                    formatter: function(value, row, index) {
                       return $.table.selectDictLabel(sexDatas, value);
                    }
                },
                {
                    field: 'idcard', 
                    title: '身份证号码'
                },
                {
                    field: 'ctime', 
                    title: '注册时间'
                },
                {
                    field: 'certImg', 
                    title: '证书',
                    formatter: function(value, row, index) {
                        var actions = [];
                        if(row.certImg==null){
                        	actions.push("无");
                        }else{
                        	actions.push('<img lang="'+row.certImg+'" onclick="showImg2(this,\''+row.studentId+'\',\''+row.studentName+'\')"  width="100px" src="'+row.certImg+'" />');
                        }
                        return actions.join('');
                    }
                },
                {
                    field: 'faceImg', 
                    title: '人脸',
                    formatter: function(value, row, index) {
                        var actions = [];
                        if(row.faceToken==null){
                        	actions.push("无");
                        }else{
                        	actions.push('<img lang="'+row.faceImg+'" onclick="showImg(this,\''+row.studentId+'\',\''+row.studentName+'\')" width="100px" src="data:image/jpeg;base64,'+row.faceImg+'" />');
                        }
                        return actions.join('');
                    }
                },
                {
                    title: '操作',
                    align: 'center',
                    formatter: function(value, row, index) {
                        var actions = [];
                        actions.push('<a class="btn btn-success btn-xs ' + editFlag + '" href="javascript:void(0)" onclick="$.operate.edit(\'' + row.studentId + '\')"><i class="fa fa-edit"></i>编辑</a> ');
                        actions.push("<a class='btn btn-warn btn-xs ' href='javascript:void(0)' onclick='resetPwd(" + row.userId + ")'><i class='fa fa-key'></i>重置密码</a> ");
                        actions.push('<a class="btn btn-danger btn-xs ' + removeFlag + '" href="javascript:void(0)" onclick="$.operate.remove(\'' + row.studentId + '\')"><i class="fa fa-remove"></i>删除</a>');
                        return actions.join('');
                    }
                }]
            };
            $.table.init(options);
        });
        function removeFace(){
        	table.set();
    		var rows = $.common.isEmpty(table.options.uniqueId) ? $.table.selectFirstColumns() : $.table.selectColumns(table.options.uniqueId);
    		if (rows.length == 0) {
    			$.modal.alertWarning("请至少选择一条记录");
    			return;
    		}
    		$.modal.confirm("确认要清除选中的" + rows.length + "条人脸数据吗?", function() {
    			var url = table.options.removeFaceUrl;
    			var data = { "ids": rows.join() };
    			$.operate.submit(url, "post", "json", data);
    		});
        }
        function showImg(ele,studentId,studentName){
        	var h = '<img width="450px" src="data:image/jpeg;base64,'+$(ele).attr("lang")+'" />';
        	$.modal.showInfo(studentName,h,"500px","500px");
        }
        function showImg2(ele,studentId,studentName){
        	var h = '<img src="'+$(ele).attr("lang")+'" />';
        	$.modal.showInfo(studentName+"的证书",h,"80%","500px");
        }
        function showLevel(studentId){
        	$.get(prefix + "/showlevel",{studentId:studentId},function(result){
        		if(result.length>0){
        			var html = "";
        			for(var i=0; i<result.length ; i++){
	       				var selHtml = ' <select onchange="changeLevel(\''+result[i].subject_id+'\',\''+studentId+'\',this)"> ';
	       				for(var s=0; s<levels.length ; s ++){
	       					var selected = '';
	       					if(levels[s].levelId==result[i].level_id){
	       						selected = 'selected';
	       					}
		       				selHtml += ' <option value="'+levels[s].levelId+'" '+selected+' >'+levels[s].levelName+'</option>';
	       				}
	       				selHtml += ' </select>';
        				html += '<p><span>' + result[i].subject_name + '：</span>'+selHtml+'</p>';
        			}
       			 	$.modal.alert(html);
        		}else{
        			 $.modal.alert("没有数据");
        		}
        	});
        	
        }
		function changeLevel(subjectId,studentId,ele){
			$.get(prefix + "/changeLevel",{studentId:studentId,subjectId:subjectId,levelId:$(ele).find("option:selected").val()},function(result){
        		if(result=="success"){
       			 	alert("修改成功");
        		}else{
       			 	alert("修改失败");
        		}
        	});
		}
        var prefixDept = ctx + "system/dept";
        /*部门管理-新增-选择父部门树*/
        function selectDeptTree() {
            var deptId = $("#treeId").val();
            if(deptId == ""){
                deptId = 100;
            }
            var options = {
                title: '机构选择',
                width: "380",
                url: prefixDept + "/selectDeptTree/" + deptId,
                callBack: doSubmit
            };
            $.modal.openOptions(options);
        }
        function doSubmit(index, layero){
            var body = layer.getChildFrame('body', index);
            $("#treeId").val(body.find('#treeId').val());
            $("#treeName").val(body.find('#treeName').val());
            layer.close(index);
        }
        /* 用户管理-重置密码 */
		function resetPwd(userId) {
		    var url = ctx + "system/user/resetPwd/" + userId;
		    $.modal.open("重置密码", url, '800', '300');
		}
    </script>
</body>
</html>