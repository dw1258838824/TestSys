package com.ruoyi.project.system.api.controller;

import com.ruoyi.project.system.exam.domain.TExam;
import com.ruoyi.project.system.exam.service.ITExamService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import java.util.HashMap;
import java.util.Map;

@RestController
@CrossOrigin(maxAge = 3600)
@RequestMapping("/api/exam")
public class ExamApi {

    @Autowired
    private ITExamService examService;

    @GetMapping("/list")
    public Map<String,Object> list(TExam exam){
        Map<String,Object> rest = new HashMap<>();
        rest.put("code","200");
        rest.put("data",examService.apiList(exam));
        return rest;
    }

    @GetMapping("/get")
    public Map<String,Object> get(TExam exam){
        Map<String,Object> rest = new HashMap<>();
        rest.put("code","200");
        rest.put("data",examService.apiGet(exam));
        return rest;
    }

}
