<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" >
<head>
    <th:block th:include="include :: header('修改等级管理')" />
</head>
<body class="white-bg">
    <div class="wrapper wrapper-content animated fadeInRight ibox-content">
        <form class="form-horizontal m" id="form-level-edit" th:object="${tLevel}">
            <input name="levelId" th:field="*{levelId}" type="hidden">
            <div class="form-group">    
                <label class="col-sm-3 control-label is-required">等级名称：</label>
                <div class="col-sm-8">
                    <input name="levelName" th:field="*{levelName}" class="form-control" type="text" required>
                </div>
            </div>
            <div class="form-group">    
                <label class="col-sm-3 control-label">等级别称：</label>
                <div class="col-sm-8">
                    <input name="levelFullName" th:field="*{levelFullName}" class="form-control" type="text">
                </div>
            </div>
            <div class="form-group">    
                <label class="col-sm-3 control-label is-required">等级值：</label>
                <div class="col-sm-8">
                    <input name="levelValue" th:field="*{levelValue}" class="form-control" type="number" required>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">等级说明：</label>
                <div class="col-sm-8">
                    <textarea name="levelRemark" class="form-control">[[*{levelRemark}]]</textarea>
                </div>
            </div>
        </form>
    </div>
    <th:block th:include="include :: footer" />
    <script type="text/javascript">
        var prefix = ctx + "system/level";
        $("#form-level-edit").validate({
            focusCleanup: true
        });

        function submitHandler() {
            if ($.validate.form()) {
                $.operate.save(prefix + "/edit", $('#form-level-edit').serialize());
            }
        }
    </script>
</body>
</html>