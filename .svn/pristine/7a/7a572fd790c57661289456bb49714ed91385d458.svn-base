<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" xmlns:shiro="http://www.pollix.at/thymeleaf/shiro">
<head>
    <th:block th:include="include :: header('试卷管理列表')" />
</head>
<body class="gray-bg">
     <div class="container-div">
        <div class="row">
            <div class="col-sm-12 search-collapse">
                <form id="formId">
                    <div class="select-list">
                        <ul>
                            <li>
                                <label>试卷名称：</label>
                                <input type="text" name="paperName"/>
                            </li>
                            <li>
                                <label>试卷类型：</label>
                                <select name="paperType" th:with="type=${@dict.getType('sys_paper_type')}">
                                    <option value="">所有</option>
                                    <option th:each="dict : ${type}" th:text="${dict.dictLabel}" th:value="${dict.dictValue}"></option>
                                </select>
                            </li>
                            <li>
                                <label>等级：</label>
                                <select name="level" >
                                    <option value="">所有</option>
                                </select>
                            </li>
                            <li>
                                <label>科目：</label>
                                <select name="subjectId" >
                                    <option value="">所有</option>
                                </select>
                            </li>
                            <li>
                                <label>判卷模式：</label>
                                <select name="judgeMode" th:with="type=${@dict.getType('sys_judge_mode')}">
                                    <option value="">所有</option>
                                    <option th:each="dict : ${type}" th:text="${dict.dictLabel}" th:value="${dict.dictValue}"></option>
                                </select>
                            </li>
                            <li class="select-time">
                                <label>创建时间：</label>
                                <input type="text" class="time-input" id="startTime" placeholder="开始时间" name="params[beginCtime]"/>
                                <span>-</span>
                                <input type="text" class="time-input" id="endTime" placeholder="结束时间" name="params[endCtime]"/>
                            </li>
                            <li>
                                <label>创建人：</label>
                                <input type="text" name="creator"/>
                            </li>
                            <li>
                                <a id="searchBtn" class="btn btn-primary btn-rounded btn-sm" onclick="$.table.search()"><i class="fa fa-search"></i>&nbsp;搜索</a>
                                <a class="btn btn-warning btn-rounded btn-sm" onclick="$.form.reset()"><i class="fa fa-refresh"></i>&nbsp;重置</a>
                            </li>
                        </ul>
                    </div>
                </form>
            </div>

            <div class="btn-group-sm" id="toolbar" role="group">
                <a class="btn btn-success" onclick="$.operate.add()" shiro:hasPermission="system:paper:add">
                    <i class="fa fa-plus"></i> 添加
                </a>
                <a class="btn btn-danger multiple disabled" onclick="$.operate.removeAll()" shiro:hasPermission="system:paper:remove">
                    <i class="fa fa-remove"></i> 删除
                </a>
                <a class="btn btn-warning" onclick="$.table.exportExcel()" shiro:hasPermission="system:paper:export">
                    <i class="fa fa-download"></i> 导出
                </a>
            </div>
            <div class="col-sm-12 select-table table-striped">
                <table id="bootstrap-table"></table>
            </div>
        </div>
    </div>
 
    <th:block th:include="include :: footer" />
    <script th:inline="javascript">
        var editFlag = [[${@permission.hasPermi('system:paper:edit')}]];
        var removeFlag = [[${@permission.hasPermi('system:paper:remove')}]];
        var paperTypeDatas = [[${@dict.getType('sys_paper_type')}]];
        var judgeModeDatas = [[${@dict.getType('sys_judge_mode')}]];

        var yulanFlag = [[${@permission.hasPermi('system:exam:yulan')}]];
        var prefix = ctx + "system/paper";
		
        function getUrlParam(name) {
          var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)"); //构造一个含有目标参数的正则表达式对象
          var r = window.location.search.substr(1).match(reg); //匹配目标参数
          if (r != null) return unescape(r[2]); return null; //返回参数值
        }
        /* 添加用户-选择用户-提交 */
		function submitHandler() {
			var paperId = $.table.selectFirstColumns();
			var paperName = $.table.selectColumns("paperName");
			if (paperId.length == 0) {
       			$.modal.alertWarning("请至少选择一条记录");
       			return;
       		}
			$.modal.close();
			// 父页面的变量
			parent.$('#paperId').val(paperId.join());
			parent.$('#paperName').val(paperName.join());
		}
        $(function() {
        	initLevelList("level",getUrlParam("levelId"));
        	initSubjectList("subjectId",getUrlParam("subjectId"));
        	
            var options = {
                url: prefix + "/list",
                createUrl: prefix + "/add",
                updateUrl: prefix + "/edit/{id}",
                removeUrl: prefix + "/remove",
                exportUrl: prefix + "/export",
                modalName: "试卷管理",
                columns: [{
                    radio: true
                },
                {
                    field: 'paperId', 
                    title: '试卷编号',
                    visible: false
                },
                {
                    field: 'paperName', 
                    title: '试卷名称',
                	formatter: function(value, row, index) {
                		return $.table.tooltip(value);
                	}
                },
                {
                    field: 'paperType', 
                    title: '试卷类型',
                    formatter: function(value, row, index) {
                       return $.table.selectDictLabel(paperTypeDatas, value);
                    }
                },
                {
                    field: 'levelName', 
                    title: '等级'
                },
                {
                    field: 'subjectName', 
                    title: '科目'
                },
                {
                    field: 'allScore', 
                    title: '总分'
                },
                {
                    field: 'passScore', 
                    title: '及格分数'
                },
                {
                    field: 'judgeMode', 
                    title: '判卷模式',
                    formatter: function(value, row, index) {
                       return $.table.selectDictLabel(judgeModeDatas, value);
                    }
                },
                {
                    field: 'ctime', 
                    title: '创建时间'
                },
                {
                    field: 'creator', 
                    title: '创建人'
                },
                {
                    title: '操作',
                    align: 'center',
                    formatter: function(value, row, index) {
                        var actions = [];
                        actions.push('<a class="btn btn-primary btn-xs ' + yulanFlag + '" href="javascript:void(0)" lang="'+row.paperDoc+'" onclick="showAllHtml(this)"><i class="fa fa-search"></i>预览</a> ');
                        actions.push('<a class="btn btn-success btn-xs ' + editFlag + '" href="javascript:void(0)" onclick="$.operate.edit(\'' + row.paperId + '\')"><i class="fa fa-edit"></i>编辑</a> ');
                        actions.push('<a class="btn btn-danger btn-xs ' + removeFlag + '" href="javascript:void(0)" onclick="$.operate.remove(\'' + row.paperId + '\')"><i class="fa fa-remove"></i>删除</a>');
                        return actions.join('');
                    }
                }]
            };
            $.table.init(options);
	        if(getUrlParam("jump")=="1"){
	        	setTimeout(function(){$.table.search()}, 100);
	    	}
        });
    </script>
</body>
</html>