<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" xmlns:shiro="http://www.pollix.at/thymeleaf/shiro">
<head>
    <th:block th:include="include :: header('账单列表')" />
</head>
<body class="gray-bg">
     <div class="container-div">
        <div class="row">

            <div class="col-sm-12 search-collapse">
                <form id="formId">
                    <div class="select-list">
                        <ul>
                            <li>
                                <label>机构：</label>
                                <div class="input-group" style="width: 200px" onclick="selectDeptTree()">
                                    <input id="treeId" name="deptId" type="text" style="display:none" value="" />
                                    <input class="form-control" type="text" id="treeName" readonly="true">
                                    <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                </div>
                            </li>
                            <li>
                                <a class="btn btn-primary btn-rounded btn-sm" onclick="$.table.search()"><i class="fa fa-search"></i>&nbsp;搜索</a>
                                <a class="btn btn-warning btn-rounded btn-sm" onclick="$.form.reset()"><i class="fa fa-refresh"></i>&nbsp;重置</a>
                            </li>
                        </ul>
                    </div>
                </form>
            </div>


            <div class="btn-group-sm" id="toolbar" role="group">
                <a class="btn btn-danger multiple disabled" onclick="$.operate.removeAll()" shiro:hasPermission="system:bill:remove">
                    <i class="fa fa-remove"></i> 删除
                </a>
                <a class="btn btn-warning" onclick="$.table.exportExcel()" shiro:hasPermission="system:bill:export">
                    <i class="fa fa-download"></i> 导出
                </a>
            </div>
            <div class="col-sm-12 select-table table-striped">
                <table id="bootstrap-table"></table>
            </div>
        </div>
    </div>
    <th:block th:include="include :: footer" />
    <script th:inline="javascript">
        var editFlag = [[${@permission.hasPermi('system:bill:edit')}]];
        var removeFlag = [[${@permission.hasPermi('system:bill:remove')}]];
        var prefix = ctx + "system/bill";

        var billTypeDatas = [[${@dict.getType('sys_bill_type')}]];
        var billNameDatas = [[${@dict.getType('sys_bill_name')}]];
        var payStateDatas = [[${@dict.getType('sys_pay_state')}]];
        

        $(function() {
            var options = {
                url: prefix + "/list",
                createUrl: prefix + "/add",
                updateUrl: prefix + "/edit/{id}",
                removeUrl: prefix + "/remove",
                exportUrl: prefix + "/export",
                modalName: "账单",
                columns: [{
                    checkbox: true
                },
                {
                    field: 'billId', 
                    title: '账单序列',
                    visible: false
                },
                {
                    field: 'billNo', 
                    title: '账单号',
                    visible: false
                },
                {
                    field: 'params.payUserName', 
                    title: '支付人'
                },
                {
                    field: 'billType', 
                    title: '账单类型',
                    formatter: function(value, row, index) {
                        return $.table.selectDictLabel(billTypeDatas, value);
                    }
                },
                {
                    field: 'billName', 
                    title: '账单名称',
                    formatter: function(value, row, index) {
                        return $.table.selectDictLabel(billNameDatas, value);
                    }
                },
                {
                    field: 'params.examTitle', 
                    title: '相关考试'
                },
                {
                    field: 'params.takeUserName', 
                    title: '收款人',
                    formatter: function(value, row, index) {
                    	if(row.billName=="1"){
	                        return "系统";
                    	}else{
                    		return row.params.takeUserName;
                    	}
                    }
                },
                {
                    field: 'amount', 
                    title: '金额'
                },
                {
                    field: 'payTime', 
                    title: '交易时间'
                },
                {
                    field: 'ctime', 
                    title: '创建时间'
                },
                {
                    field: 'payState', 
                    title: '交易状态',
                    formatter: function(value, row, index) {
                        return $.table.selectDictLabel(payStateDatas, value);
                    }
                },
                {
                    title: '操作',
                    align: 'center',
                    formatter: function(value, row, index) {
                        var actions = [];
                        actions.push('<a class="btn btn-danger btn-xs ' + removeFlag + '" href="javascript:void(0)" onclick="$.operate.remove(\'' + row.billId + '\')"><i class="fa fa-remove"></i>删除</a>');
                        return actions.join('');
                    }
                }]
            };
            $.table.init(options);
        });


        var prefixDept = ctx + "system/dept";
        /*部门管理-新增-选择父部门树*/
        function selectDeptTree() {
            var deptId = $("#treeId").val();
            if(deptId == ""){
                deptId = 100;
            }
            var options = {
                title: '机构选择',
                width: "380",
                url: prefixDept + "/selectDeptTree/" + deptId,
                callBack: doSubmit
            };
            $.modal.openOptions(options);
        }
        function doSubmit(index, layero){
            var body = layer.getChildFrame('body', index);
            $("#treeId").val(body.find('#treeId').val());
            $("#treeName").val(body.find('#treeName').val());
            layer.close(index);
        }
    </script>
</body>
</html>