<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" >
<head>
    <th:block th:include="include :: header('修改题型管理')" />
</head>
<body class="white-bg">
    <div class="wrapper wrapper-content animated fadeInRight ibox-content">
        <form class="form-horizontal m" id="form-type-edit" th:object="${tQuestionType}">
            <input name="questionTypeId" th:field="*{questionTypeId}" type="hidden">
            <div class="form-group">    
                <label class="col-sm-3 control-label is-required">题型名称：</label>
                <div class="col-sm-8">
                    <input name="questionTypeName" th:field="*{questionTypeName}" class="form-control" type="text" required>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">题型模板：</label>
                <div class="col-sm-8">
                    <textarea id="questionTypeHtml" name="questionTypeHtml" rows="10" class="form-control">[[*{questionTypeHtml}]]</textarea>
                </div>
            </div>
            <div class="form-group">    
                <label class="col-sm-3 control-label is-required">考试模式：</label>
                <div class="col-sm-8">
                    <select name="typeMode" class="form-control m-b" th:with="type=${@dict.getType('sys_type_mode')}" required>
                        <option th:each="dict : ${type}" th:text="${dict.dictLabel}" th:value="${dict.dictValue}" th:field="*{typeMode}"></option>
                    </select>
                </div>
            </div>
            <div class="form-group">    
                <label class="col-sm-3 control-label is-required">默认生成数量：</label>
                <div class="col-sm-8">
                    <input  th:field="*{defaultCount}" name="defaultCount" class="form-control" type="number" required>
                </div>
            </div>
            <div class="form-group">    
                <label class="col-sm-3 control-label is-required">默认生成分数：</label>
                <div class="col-sm-8">
                    <input  th:field="*{defaultScore}" name="defaultScore" class="form-control" type="number" required>
                </div>
            </div>
        </form>
    </div>
    <th:block th:include="include :: footer" />
    <script type="text/javascript">
        var prefix = ctx + "system/type";
        $("#form-type-edit").validate({
            focusCleanup: true
        });

        function submitHandler() {
            if ($.validate.form()) {
                $.operate.save(prefix + "/edit", $('#form-type-edit').serialize());
            }
        }
    </script>
</body>
</html>