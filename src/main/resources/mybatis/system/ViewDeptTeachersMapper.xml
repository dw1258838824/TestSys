<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.system.teacherschart.mapper.ViewDeptTeachersMapper">
    
    <resultMap type="ViewDeptTeachers" id="ViewDeptTeachersResult">
        <result property="deptId"    column="dept_id"    />
        <result property="counts"    column="counts"    />
    </resultMap>

    <sql id="selectViewDeptTeachersVo">
        select dept_id, counts from view_dept_teachers
    </sql>

    <select id="selectViewDeptTeachersList" parameterType="ViewDeptTeachers" resultMap="ViewDeptTeachersResult">
        <include refid="selectViewDeptTeachersVo"/>
        <where>  
            <if test="deptId != null "> and dept_id = #{deptId}</if>
            <!-- 数据范围过滤 -->
			${params.dataScope}
        </where>
    </select>
    
    <select id="selectViewDeptTeachersById" parameterType="Long" resultMap="ViewDeptTeachersResult">
        <include refid="selectViewDeptTeachersVo"/>
        where dept_id = #{deptId}
    </select>
        
    <insert id="insertViewDeptTeachers" parameterType="ViewDeptTeachers">
        insert into view_dept_teachers
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="deptId != null ">dept_id,</if>
            <if test="counts != null ">counts,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="deptId != null ">#{deptId},</if>
            <if test="counts != null ">#{counts},</if>
         </trim>
    </insert>

    <update id="updateViewDeptTeachers" parameterType="ViewDeptTeachers">
        update view_dept_teachers
        <trim prefix="SET" suffixOverrides=",">
            <if test="counts != null ">counts = #{counts},</if>
        </trim>
        where dept_id = #{deptId}
    </update>

    <delete id="deleteViewDeptTeachersById" parameterType="Long">
        delete from view_dept_teachers where dept_id = #{deptId}
    </delete>

    <delete id="deleteViewDeptTeachersByIds" parameterType="String">
        delete from view_dept_teachers where dept_id in 
        <foreach item="deptId" collection="array" open="(" separator="," close=")">
            #{deptId}
        </foreach>
    </delete>
    
</mapper>